<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Session Buddy - Settings</title>
    <link rel="stylesheet" href="assets/settings.css">
</head>
<body>
    <h1>Session Buddy Settings</h1>
    
    <div class="section">
        <h2>General Settings</h2>
        <div class="form-group">
            <label>
                <input type="checkbox" id="autoSave">
                Automatically save sessions
            </label>
        </div>
        <div class="form-group">
            <label for="autoSaveInterval">Auto-save interval (minutes):</label>
            <input type="number" id="autoSaveInterval" min="5" max="120" value="30">
        </div>
    </div>
    
    <div class="section">
        <h2>Security Settings</h2>
        <div class="form-group">
            <label>
                <input type="checkbox" id="encryptData">
                Encrypt session data
            </label>
        </div>
    </div>
    
    <div class="section">
        <h2>Data Management</h2>
        <button id="exportData">Export All Sessions</button>
        <button id="importData">Import Sessions</button>
        <button id="clearData">Clear All Sessions</button>
    </div>
    
    <div id="status" class="status"></div>
    
    <script type="module" src="assets/settings.js"></script>
</body>
</html> 