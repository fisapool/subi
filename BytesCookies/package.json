{
  "name": "bytescookies",
  "version": "1.0.0",
  "description": "Browser extension for managing cookies",
  "main": "background.js",
  "scripts": {
    "test": "jest --runInBand --testTimeout=120000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testTimeout": 120000,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ]
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  }
}
